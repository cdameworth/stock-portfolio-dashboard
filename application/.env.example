# Stock Portfolio Dashboard - Environment Configuration
# Copy this file to .env for local development
# For Railway deployment, configure these in the Railway dashboard

# ===========================================
# Server Configuration
# ===========================================
PORT=3000
NODE_ENV=production

# ===========================================
# Database Configuration
# ===========================================
# Railway Postgres plugin auto-injects DATABASE_URL
# For local development, use individual variables:
DATABASE_URL=postgresql://user:password@host:5432/database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=stock_portfolio
DB_USER=postgres
DB_PASSWORD=your_password
DB_SSL=true

# ===========================================
# Redis Configuration
# ===========================================
# Railway Redis plugin auto-injects REDIS_URL
REDIS_URL=redis://localhost:6379

# ===========================================
# External APIs
# ===========================================
# Stock Analytics Engine API endpoint
STOCK_ANALYTICS_API_URL=https://your-stock-analytics-api.railway.app

# ===========================================
# Authentication & Security
# ===========================================
# IMPORTANT: Generate unique 32-character secrets for production
BRANCA_SECRET=your-32-character-branca-secret!!
JWT_SECRET=your-jwt-secret-key-here
SESSION_SECRET=your-session-secret-key-here

# ===========================================
# Observability (Optional)
# ===========================================
# SigNoz Cloud configuration
OTEL_EXPORTER_OTLP_ENDPOINT=https://ingest.us.signoz.cloud:443
SIGNOZ_ACCESS_TOKEN=your-signoz-token
OTEL_SERVICE_NAME=stock-portfolio-dashboard
OTEL_SERVICE_VERSION=1.0.0

# ===========================================
# Email Configuration (Optional)
# ===========================================
# Options: console, ses, gmail, sendgrid
EMAIL_PROVIDER=console

# For SES
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# For SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key

# ===========================================
# Stripe Payment Processing
# ===========================================
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=your-stripe-secret-key-here
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key-here
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret-here
# For Vite/React frontend (must be prefixed with VITE_)
VITE_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key-here

# Stripe Price IDs (create these in Stripe Dashboard > Products)
STRIPE_PRICE_PRO_MONTHLY=your-pro-monthly-price-id
STRIPE_PRICE_PRO_YEARLY=your-pro-yearly-price-id
STRIPE_PRICE_PREMIUM_MONTHLY=your-premium-monthly-price-id
STRIPE_PRICE_PREMIUM_YEARLY=your-premium-yearly-price-id

# App URL for Stripe redirects
APP_URL=http://localhost:3000

# ===========================================
# Feature Flags (Optional)
# ===========================================
# Google AdSense
ENABLE_ADS=false
GOOGLE_AD_PUBLISHER_ID=ca-pub-xxxxxxxxxxxxxxxx

# ===========================================
# Development Only
# ===========================================
# Set to true to enable debug logging
DEBUG=false
